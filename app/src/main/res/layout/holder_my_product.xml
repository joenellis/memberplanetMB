<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/holderMyProduct_rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/holderMyProduct_imgProductImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            tools:ignore="ContentDescription"
            tools:background="@drawable/material_wallpaper"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@id/holderMyProduct_imgProductImage"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:layout_toRightOf="@id/holderMyProduct_imgProductImage"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/holderMyProduct_txtProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="asdfghjkl;l,kmjhgfd"/>

            <TextView
                android:id="@+id/holderMyProduct_txtProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="14sp"
                tools:text="asdfghjkl;l,kmjhgfd"/>

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>