<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/holderNewsFeeds_rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/holderNewsFeeds_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            tools:background="@drawable/material_wallpaper"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/holderNewsFeed_laySummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/holderNewsFeeds_img"
            android:layout_toRightOf="@id/holderNewsFeeds_img"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/holderMyProduct_txtProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="15sp"
                tools:text="sfdhbckskdjc" />

            <TextView
                android:id="@+id/holderMyProduct_txtProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textSize="12sp"
                tools:text="sfdhbckskdjc" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/holderNewsFeed_laySummary"
            android:orientation="vertical">

            <TextView
                android:id="@+id/holderMyProduct_txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="dhbcsdkjacnsd" />

            <TextView
                android:id="@+id/holderMyProduct_txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                tools:text="ghhc" />

            <ImageView
                android:id="@+id/holderNewsFeeds_img2"
                android:layout_width="353dp"
                android:layout_height="200dp"
                tools:background="@drawable/material_wallpaper"/>

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>