<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/holderNewsFeeds_rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/holderNewsFeeds_img3"
            android:layout_width="353dp"
            android:layout_height="200dp"
            tools:background="@drawable/material_wallpaper"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/holderNewsFeed_laySummary"
            android:orientation="vertical">

            <TextView
                android:id="@+id/holderMyProduct_txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="120dp"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="dhbcsdkjacnsd"
                android:paddingLeft="20dp"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:id="@+id/holderMyProduct_txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp"
                android:textColor="@color/colorWhite"
                tools:text="ghhc" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_below="@id/holderNewsFeeds_img3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/holderMyProduct_txtTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="dhbcsdkjacnsd"
                android:paddingLeft="20dp" />

            <TextView
                android:id="@+id/holderMyProduct_txtDescri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="20dp"
                tools:text="ghhc" />


        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>